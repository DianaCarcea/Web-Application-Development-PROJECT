@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix prov: <http://www.w3.org/ns/prov#> .
@prefix dc: <http://purl.org/dc/elements/1.1/> .
@prefix dct: <http://purl.org/dc/terms/> .
@prefix arp: <http://arp.ro/schema#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .

# ---------------------------------------------------------
# DEFINIREA ONTOLOGIEI
# ---------------------------------------------------------

<http://arp.ro/schema#> a owl:Ontology ;
    rdfs:label "ArP - Artwork Provenance Ontology" ;
    rdfs:comment "Ontologie pentru proveniența operelor de artă, bazată pe PROV-O." .

# ---------------------------------------------------------
# CLASE PRINCIPALE (Mapping PROV)
# ---------------------------------------------------------

# --- ENTITY ---
arp:Entity a owl:Class ;
    rdfs:subClassOf prov:Entity ;
    rdfs:label "Entitate (General)" .

arp:Artwork a owl:Class ;
    rdfs:subClassOf arp:Entity ;
    rdfs:label "Operă de Artă" .

arp:Collection a owl:Class ;
    rdfs:subClassOf arp:Entity, prov:Collection ;
    rdfs:label "Colecție Muzeală" .

# --- AGENT ---
arp:Agent a owl:Class ;
    rdfs:subClassOf prov:Agent ;
    rdfs:label "Agent" .

arp:Person a owl:Class ;
    rdfs:subClassOf arp:Agent, prov:Person ;
    rdfs:label "Persoană" .

arp:Organization a owl:Class ;
    rdfs:subClassOf arp:Agent, prov:Organization ;
    rdfs:label "Organizație" .

# Subclase Agent Specifice
arp:Artist a owl:Class ;
    rdfs:subClassOf arp:Person ;
    rdfs:label "Artist" .

arp:Registrar a owl:Class ;
    rdfs:subClassOf arp:Person ;
    rdfs:label "Întocmitor Fișă Catalog / Registrar" ;
    rdfs:comment "Persoană care înregistrează metadatele unei opere în catalog." .

arp:Validator a owl:Class ;
    rdfs:subClassOf arp:Person ;
    rdfs:label "Validare Fișă Catalog" ;
    rdfs:comment "Persoană care valideaza metadatele unei opere din catalog." .

arp:Restorer a owl:Class ;
    rdfs:subClassOf arp:Person ;
    rdfs:label "Restaurator" .

arp:Collector a owl:Class ;
    rdfs:subClassOf arp:Person ;
    rdfs:label "Colecționar" .

arp:Museum a owl:Class ;
    rdfs:subClassOf arp:Organization ;
    rdfs:label "Muzeu" .

# --- ACTIVITY ---
arp:Activity a owl:Class ;
    rdfs:subClassOf prov:Activity ;
    rdfs:label "Activitate (General)" .

arp:Creation a owl:Class ;
    rdfs:subClassOf arp:Activity, prov:Create ;
    rdfs:label "Creație Artistică" .

arp:Restoration a owl:Class ;
    rdfs:subClassOf arp:Activity, prov:Modify ;
    rdfs:label "Restaurare" .


arp:TransferOfCustody a owl:Class ;
    rdfs:subClassOf arp:Activity, prov:RightsAssignment ;
    rdfs:label "Transfer de Custodie/Vânzare" .


arp:Exhibition a owl:Class ;
    rdfs:subClassOf arp:Activity, prov:Publish ;
    rdfs:label "Expoziție" .

# ---------------------------------------------------------
# PROPRIETĂȚI (Data Properties - Atribute)
# ---------------------------------------------------------

# Comune (mostenite de Activity)
arp:startedAtTime a owl:DatatypeProperty ;
    rdfs:subPropertyOf prov:startedAtTime ;
    rdfs:domain arp:Activity ;
    rdfs:range rdfs:Literal ;
    rdfs:label "Data Început" .

arp:endedAtTime a owl:DatatypeProperty ;
    rdfs:subPropertyOf prov:endedAtTime ;
    rdfs:domain arp:Activity ;
    rdfs:range rdfs:Literal ; # Modificat din xsd:date pentru flexibilitate istorică
    rdfs:label "Data Sfârșit" .

arp:currentLocation a owl:ObjectProperty ;
    rdfs:subPropertyOf prov:atLocation ;
    rdfs:domain arp:Artwork ;
    rdfs:range arp:Agent ; # Poate fi Muzeu sau Colecționar
    rdfs:label "Locația Curentă" .

arp:hasOwnership a owl:ObjectProperty ;
     rdfs:domain arp:Artwork ;
     rdfs:range arp:TransferOfCustody ;  # sau :OwnershipEvent dacă creezi subclasă
     rdfs:label "Evenimente de proprietate / deținere"@ro ;
     rdfs:comment "Leagă o operă de artă de activitățile prin care a fost deținută de colectori, muzee etc., incluzând perioada și tipul de tranzacție."@ro .

# Specifice Artwork
arp:title a owl:DatatypeProperty ;
    rdfs:domain arp:Entity ; # Entity acoperă și Artwork și Collection
    rdfs:range xsd:string ;
    rdfs:label "Titlu" .

arp:dimensions a owl:DatatypeProperty ;
   rdfs:domain arp:Artwork ;
   rdfs:range xsd:string ;
   rdfs:label "Dimensiuni" .

arp:classification a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:string ;
    rdfs:label "Clasificare (ex: artă plastică, fine arts)" .

arp:category a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:string ;
    rdfs:label "Categorie (ex: Acuarelă, Pictură)" .

arp:condition a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:string ;
    rdfs:label "Stare de Conservare" .

arp:inventoryNumber a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:string ;
    rdfs:label "Număr Inventar" .

arp:description a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:string ;
    rdfs:label "Descriere / Proveniență" .

arp:imageLink a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:anyURI ;
    rdfs:label "Link Imagine Digitală" .

arp:cimecLink a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:anyURI ;
    rdfs:label "Link Detaliu CIMEC" .

arp:wikidataLink a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:anyURI ;
    rdfs:label "Link Wikidata" .

dct:license a owl:ObjectProperty ; # Folosim standardul Dublin Core Terms
    rdfs:domain arp:Artwork ;
    rdfs:range rdfs:Resource ;
    rdfs:label "Licență / Drepturi" .

arp:recordedBy a owl:ObjectProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range arp:Registrar ;
    rdfs:label "fișă întocmită de"@ro ;
    rdfs:comment "Persoana care a întocmit fișa de catalog pentru această operă."@ro .

arp:recordedAt a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:date ;
    rdfs:label "Data întocmirii fișei" ;
    rdfs:comment "Data la care a fost întocmită fișa metadatelor." .

arp:validatedBy a owl:ObjectProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range arp:Validator ;
    rdfs:label "fișă validată de"@ro ;
    rdfs:comment "Persoana care a validat fișa de catalog pentru această operă."@ro .

arp:validatedAt a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range xsd:date ;
    rdfs:label "Data validării fișei" ;
    rdfs:comment "Data la care a fost validată fișa metadatelor." .

# Specifice Artist/Persoană
arp:name a owl:DatatypeProperty ;
    rdfs:domain arp:Agent ;
    rdfs:range xsd:string ;
    rdfs:label "Nume" .

arp:birthDate a owl:DatatypeProperty ;
    rdfs:domain arp:Person ;
    rdfs:range rdfs:Literal ; # Modificat din xsd:date (ex: "cca 1850" nu e dată validă)
    rdfs:label "Data Nașterii" .

# URI-ul Wikidata al artistului
arp:wikidataUri a owl:DatatypeProperty ;
    rdfs:domain arp:Artist ;
    rdfs:range xsd:anyURI ;
    rdfs:label "URI Wikidata" ;
    rdfs:comment "Link către entitatea Wikidata corespunzătoare artistului." .

# Numele preferat al artistului de pe Wikidata
arp:wikidataName a owl:DatatypeProperty ;
     rdfs:domain arp:Artist ;
     rdfs:range xsd:string ;
     rdfs:label "Nume Wikidata" ;
     rdfs:comment "Numele oficial al artistului așa cum apare pe Wikidata." .

# Imagine digitală a artistului
arp:imageLink a owl:DatatypeProperty ;
      rdfs:domain arp:Artist ;
      rdfs:range xsd:anyURI ;
      rdfs:label "Link Imagine Digitală" ;
      rdfs:comment "Link către o imagine digitală a artistului." .

# Specifice Activități
arp:technique a owl:DatatypeProperty ;
    rdfs:domain arp:Creation ;
    rdfs:range xsd:string ; # Adăugat range
    rdfs:label "Tehnică Artistică" .

arp:materialsUsed a owl:DatatypeProperty ;
    rdfs:domain arp:Creation ;
    rdfs:domain arp:Restoration ;
    rdfs:range xsd:string ; # Adăugat range
    rdfs:label "Materiale Folosite" .

arp:culture a owl:DatatypeProperty ;
    rdfs:domain arp:Artwork ;
    rdfs:range rdfs:Literal ;
    rdfs:label "Cultură / Școală Artistică" .

arp:transactionType a owl:DatatypeProperty ;
    rdfs:domain arp:TransferOfCustody ;
    rdfs:range xsd:string ; # Adăugat range
    rdfs:label "Tip Tranzacție" .

arp:price a owl:DatatypeProperty ;
    rdfs:domain arp:TransferOfCustody ;
    rdfs:range xsd:decimal ;
    rdfs:label "Preț" .

arp:exhibitionTitle a owl:DatatypeProperty ;
    rdfs:domain arp:Exhibition ;
    rdfs:range xsd:string ; # Adăugat range
    rdfs:label "Titlu Expoziție" .